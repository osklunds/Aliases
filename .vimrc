
set number relativenumber
set ts=4
set sw=4

set ignorecase
set colorcolumn=80

set formatoptions-=r
set formatoptions-=o

let NERDTreeShowHidden=1

autocmd BufNew * execute ":tabmove"

set autoread

set noswapfile
